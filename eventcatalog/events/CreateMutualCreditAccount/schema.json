{
  "$id": "https://cosmonic.com/concordance/mutualcreditaccount/CreateAccount.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CreateAccount",
  "type": "object",
  "properties": {
    "accountNumber": {
      "type": "string",
      "description": "The account number to be created"
    },
    "minBalance": {
      "type": "integer",
      "description": "The minimum required maintenance balance for the account"
    },
    "initialBalance": {
      "type": "integer",
      "description": "Initial deposit amount for the account"
    },
    "entityId": {
      "type": "string",
      "description": "The ID of the entity"
    }
  },
  "required": ["accountNumber", "entityId"]
}
